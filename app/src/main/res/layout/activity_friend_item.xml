<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/friend_item_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="friends' icon"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/friend_item_alias"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/tv_round"
        android:gravity="center"
        android:padding="6dp"
        android:layout_weight="1"
        android:text="alias name" />

    <TextView
        android:id="@+id/friend_item_id"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/tv_round"
        android:gravity="center"
        android:padding="6dp"
        android:layout_weight="1"
        android:text="ID" />

    <TextView
        android:id="@+id/friend_item_phone"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/tv_round"
        android:gravity="center"
        android:padding="6dp"
        android:layout_weight="1"
        android:text="Phone" />
</LinearLayout>
